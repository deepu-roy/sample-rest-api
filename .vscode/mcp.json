{
	"servers": {
		"sqlite": {
			"command": "npx",
			"args": [
				"-y",
				"@executeautomation/database-server@1.1.0",
				"${input:sqlite_path}"
			],
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"id": "sqlite_path",
			"type": "promptString",
			"description": "Path to SQLite database file"
		}
	]
}